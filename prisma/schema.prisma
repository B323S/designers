generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String       @id @default(cuid())
  email        String       @unique
  password     String
  name         String?
  gradingScale String       @default("0-5")
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt
  
  subjects     Subject[]
  directLinks  DirectLink[]
}

model Subject {
  id              String   @id @default(cuid())
  name            String
  color           String
  gradeGroups     String   
  materials       String   
  kanbanColumns   String   
  kanbanTasks     String   
  moodboardImages String   
  fileLinks       String   
  schedule        String   @default("[]")
  processNotes    String?
  userId          String
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DirectLink {
  id        String   @id @default(cuid())
  title     String
  url       String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}
